import time 
print("Welcome To Your Worst Nightmare")
time.sleep(3)
print("You Will Spend The Next 400 years here if you don't make it out")
player_name = input("What is your name? ")
print(f"Hello {player_name}, if you want to get out of here soon, you will have to choose every decision wisely. The only way out is through the castle on the far side of the island. You are on the opposite side. To get there, you must travel through the deep forest.")

would_you_like_to_leave = input("Would you like to begin? [yes or no] ")
if would_you_like_to_leave.lower() != "yes":
    print("Ok Bye =(")
else:
    print("Then let's begin")
