    if buy_supplies.lower() == "yes":
        print("You buy basic supplies.")
        inventory.append("20 pounds of food, 4 sets of clothes, a sword, a bow with no arrows, and 20 coins for a nearby village.")  
    elif buy_supplies.lower() == "no":
        print("You take a risk; you might be able to buy things until you leave the forest.")
    else:
        print("Invalid choice.")

    print("Your inventory:", inventory)

