        print(f"You Draw Your sword and fight the {event}")
        time.sleep(2)
        print(f"you fight the {event}")
        time.sleep(2)
        print(f"the {event} is no match for you")
        time.sleep(1)
        print("the {event} surrenders")
        time.sleep(2)
        print(f"the {event} escorts you to the castle")
        time.sleep(1)
        for i in range(100):
          print("YOU WIN!!!", i + 1)
