        print("You start your journey around the forest.")
        time.sleep(3)
        print("You go left until you get to the beach.")
        time.sleep(3)
        print("You set up camp after a long hike.")
    elif direction.lower() == "through":
        print("You start the dangerous trek through the forest.")
        time.sleep(3)
        print("You wake up and start walking; you will be walking for the next 2 days until you reach the beach.")
    else:
        print("Invalid choice, please choose 'around' or 'through'.")
        exit()

    inventory = []  
