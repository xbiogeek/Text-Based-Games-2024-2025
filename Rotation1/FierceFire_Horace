fruit_rarities = [
    'common rocket', 'common spin', 'common chop', 'common spring', 'common bomb', 
    'common smoke', 'common spike', 'uncommon flame', 'uncommon falcon', 
    'uncommon ice', 'uncommon sand', 'uncommon dark', 'uncommon ghost', 
